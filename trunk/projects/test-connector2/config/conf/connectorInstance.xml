<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="ConnectorConfigMap" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<entry>
					<key>
						<value>Username</value>
					</key>
					<value>admin</value>
				</entry>
				<entry>
					<key>
						<value>Password</value>
					</key>
					<value>admin</value>
				</entry>
				<entry>
					<key>
						<value>Flavor</value>
					</key>
					<value>cherry</value>
				</entry>
				<entry>
					<key>
						<value>Repository File</value>
					</key>
					<value>MockRepositoryEventLog1.txt</value>
				</entry>
			</map>
		</constructor-arg>
	</bean>
	<bean id="TestConnector2Instance"
		class="com.google.enterprise.connector.jcradaptor.SpiRepositoryFromJcr">
		<constructor-arg>
			<bean
				class="com.google.enterprise.connector.mock.jcr.MockJcrRepository">
				<constructor-arg>
					<bean
						class="com.google.enterprise.connector.mock.MockRepository">
						<constructor-arg>
							<bean
								class="com.google.enterprise.connector.mock.MockRepositoryEventList">
								<constructor-arg>
									<bean
										class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
										<property name="targetObject"
											ref="ConnectorConfigMap" />
										<property name="targetMethod"
											value="get" />
										<property name="arguments"
											value="Repository File" />
									</bean>
								</constructor-arg>
							</bean>
						</constructor-arg>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

</beans>
