<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <bean id="CookieIdentityExtractor"
    class="com.google.enterprise.security.connectors.simplecookie.RegexCookieIdentityExtractor">
    <constructor-arg index="0" type="java.lang.String"
      value="${Regex}" />
  </bean>

  <bean id="regexCookieIdentityConnector"
    class="com.google.enterprise.security.connectors.simplecookie.SimpleCookieIdentityConnector">
    <constructor-arg index="0" type="java.lang.String"
      value="${CookieName}" />
    <constructor-arg index="1" type="java.lang.String"
      value="${IdCookieName}" />
    <constructor-arg index="2" ref="CookieIdentityExtractor" />
  </bean>
</beans>
