<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="TestConnectorAInstance"
		class="com.google.enterprise.connector.jcradaptor.SpiRepositoryFromJcr">
		<constructor-arg>
			<bean
				class="com.google.enterprise.connector.mock.jcr.MockJcrRepository">
				<constructor-arg>
					<bean
						class="com.google.enterprise.connector.mock.MockRepository">
						<constructor-arg>
							<bean
								class="com.google.enterprise.connector.mock.MockRepositoryEventList">
								<property name="workDirName" value="${googleWorkDir}"/>
								<property name="repositoryFileName" value="${RepositoryFile}"/>
							</bean>
						</constructor-arg>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>

</beans>
