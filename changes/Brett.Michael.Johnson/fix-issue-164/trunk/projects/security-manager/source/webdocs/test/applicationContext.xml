<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!-- This is the application context for regression tests.  -->
<beans>
  <bean id="EncryptedPropertyPlaceholderConfigurer"
        class="com.google.enterprise.connector.instantiator.EncryptedPropertyPlaceholderConfigurer">
  </bean>

  <bean id="FeedConnection"
        class="com.google.enterprise.connector.pusher.MockFeedConnection">
  </bean>

  <bean id="Pusher"
        class="com.google.enterprise.connector.pusher.DocPusher">
    <constructor-arg index="0" ref="FeedConnection" />
  </bean>

  <bean id="Instantiator"
        class="com.google.enterprise.connector.instantiator.SpringInstantiator">
    <constructor-arg index="0" ref="Pusher" />
    <constructor-arg index="1" ref="ThreadPool" />
  </bean>

  <bean id="ConnectorConfigStore"
        class="com.google.enterprise.connector.persist.FileStore">
  </bean>

  <bean id="ConnectorScheduleStore"
        class="com.google.enterprise.connector.persist.FileStore">
  </bean>

  <bean id="ConnectorStateStore"
        class="com.google.enterprise.connector.persist.FileStore">
  </bean>

  <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="staticMethod"
              value="com.google.enterprise.connector.instantiator.InstanceInfo.setConnectorStores"/>
    <property name="arguments">
      <list>
        <ref bean="ConnectorConfigStore"/>
        <ref bean="ConnectorScheduleStore"/>
        <ref bean="ConnectorStateStore"/>
      </list>
    </property>
  </bean>

  <bean id="IdentityConfig"
	class="com.google.enterprise.connector.security.identity.CsvConfig">
    <constructor-arg index="0" value="AuthSites.conf" />
  </bean>

  <bean id="BackEnd"
        class="com.google.enterprise.connector.saml.server.BackEndImpl">
    <property name="identityConfig" ref="IdentityConfig" />
  </bean>

  <bean id="Manager"
        class="com.google.enterprise.connector.manager.ConnectorManager">
    <property name="instantiator" ref="Instantiator" />
  </bean>

  <bean id="TraversalScheduler"
        class="com.google.enterprise.connector.scheduler.TraversalScheduler">
    <constructor-arg index="0" ref="Instantiator" />
    <constructor-arg index="1" ref="Monitor" />
  </bean>

  <bean id="Monitor"
        class="com.google.enterprise.connector.monitor.HashMapMonitor">
  </bean>

  <!-- This defines the number of seconds a task such a a Traversal
       may run before it it is cancelled. The default is 60 minutes 
       (3600 seconds). This value should exceed 
       TraversalTimeLimitSecondsDefault which is a more gentle limit.
  -->
  <bean id="ThreadPoolCancelTimeSecondsDefault" class="java.lang.Long">
    <constructor-arg index="0" type="long" value="5"/>
  </bean>

  <bean id="ThreadPool"
        class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
    <property name="staticMethod"
              value="com.google.enterprise.connector.instantiator.ThreadPool.newThreadPool"/>
    <property name="arguments">
      <list>
	<ref bean="ThreadPoolCancelTimeSecondsDefault"/>
      </list>
    </property>
  </bean>
  
  <bean id="Metadata"
	   class="com.google.enterprise.connector.saml.common.Metadata">
    <constructor-arg index="0" value="saml-metadata.xml" />
    <constructor-arg index="1" value="http://google.com/enterprise/security-manager" />
  </bean>
</beans>
