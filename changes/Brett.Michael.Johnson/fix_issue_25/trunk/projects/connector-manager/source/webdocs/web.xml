    </servlet>
    <servlet>
        <servlet-name>SetConnectorConfigNoGSA</servlet-name>
        <servlet-class>com.google.enterprise.connector.servlet.SetConnectorConfigNoGSA</servlet-class>
    </servlet>
    <servlet>
