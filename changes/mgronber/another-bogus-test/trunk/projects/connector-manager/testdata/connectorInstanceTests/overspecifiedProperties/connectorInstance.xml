<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="TestConnector1"
		class="com.google.enterprise.connector.instantiator.CustomProtoTestConnector">
		<property name="delegateConnector" ref="nestedConnector" />
		<property name="customProperty" value="${customProperty}" />
		<property name="customIntProperty" value="${customIntProperty}" />
	</bean>
	<bean id="nestedConnector"
		class="com.google.enterprise.connector.jcradaptor.SpiConnectorFromJcr">
		<constructor-arg>
			<bean
				class="com.google.enterprise.connector.mock.jcr.MockJcrRepository">
				<constructor-arg>
					<bean
						class="com.google.enterprise.connector.mock.MockRepository">
						<constructor-arg>
							<bean
								class="com.google.enterprise.connector.mock.MockRepositoryEventList">
								<constructor-arg
									value="${RepositoryFile}" />
							</bean>
						</constructor-arg>
					</bean>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties">
			<props>
				<prop key="customProperty">hungadunga</prop>
				<prop key="customIntProperty">46</prop>
			</props>
		</property>
	</bean>

</beans>
